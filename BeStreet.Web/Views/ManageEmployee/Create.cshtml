@model BeStreet.Models.Staff
@{
    Layout = "_AdminLayoutEdit";
    <title>Creaza Moderator</title>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage;
    </div>
}

@{
    var stext = ViewBag.stext;
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Creaza cont pentru moderator!</h1>
                    </div>
                    <form class="user" asp-action="Create">
                        <div class="form-group">
                            <input asp-for="StfName" class="form-control form-control-user" placeholder="Nume și prenume moderator" required />
                            <span asp-validation-for="StfName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="StfId" class="form-control form-control-user" placeholder="Username Id" required />
                            <span asp-validation-for="StfId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="StfPass" class="form-control form-control-user" placeholder="Parola" required />
                            <span asp-validation-for="StfPass" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="StartDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="mb-3">
                            <input class="btn btn-success btn-user btn-block" type="submit" value="Creaza cont" />
                        </div>
                        <br>                
                    </form>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
