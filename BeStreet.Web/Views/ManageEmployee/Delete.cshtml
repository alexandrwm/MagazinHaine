@model BeStreet.Models.Staff
@{
    Layout = "_AdminLayoutEdit";
    <title>Sterge Moderator</title>
}

@{
    var stext = ViewBag.stext;
}

<div class="d-sm-flex align-items-center justify-content-between mb-5">
    <h1 class="h3 mb-2 text-gray-800">Sterge moderator</h1>
</div>

<div class="row">
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7">

        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="position-absolute bottom-0 end-0">
                    <form asp-action="DeletePost">
                        <a class="btn btn-outline-primary" asp-action="Index">Înapoi la listă</a>
                        <input type="hidden" asp-for="StfId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />    
                    </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Informație moderator</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 mr-4">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Media</h6>
                            </div>
                            <div class="card-body">
                                <div class="card" style="border: 1px dashed #9d9da0; border-spacing: 50px">
                                    <div class="card-body">
                                        <div class="mx-auto">
                                               <img src="@ViewBag.ImgFile" class="card-img-top" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">

                        <div class="d-sm-flex align-items-center justify-content-between mb-5">
                            <h1 class="h3 mb-2 text-gray-800">Forma moderator</h1>
                        </div>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="StfName" class="control-label">Nume și prenume</label>
                                <input asp-for="StfName" class="form-control" disabled/>
                                <span asp-validation-for="StfName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StfId" class="control-label">Username Id</label>
                                <input asp-for="StfId" class="form-control" disabled />
                                <span asp-validation-for="StfId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="StfPass" class="control-label">Parola</label>
                                <input asp-for="StfPass" class="form-control" disabled />
                                <span asp-validation-for="StfPass" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DutyId" class="control-label">Tax Id</label>
                                <input asp-for="DutyId" class="form-control" disabled />
                                <span asp-validation-for="DutyId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label">Data inceput</label>
                                <input asp-for="StartDate" class="form-control" disabled/>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="QuitDate" class="control-label">Data sfirsit</label>
                                <input asp-for="QuitDate" class="form-control" disabled />
                                <span asp-validation-for="QuitDate" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
