@model ClothesShop.Models.Product

@{
    <title>Sterge produs</title>
}

@{
    Layout = "_AdminLayoutEdit";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage;
    </div>
}

<div class="d-sm-flex align-items-center justify-content-between mb-5">
    <h1 class="h3 mb-0 text-gray-800">Sterge produs</h1>
</div>

<div class="row">
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7">

        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="position-absolute bottom-0 end-0">
                <form asp-action="DeletePost">
                    <input type="hidden" asp-for="PdId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

        </div>
    </div>
</div>

<form asp-action="Edit">
    <div class="row">
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informație produs</h6>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PdId" class="control-label">Cod produs</label>
                        <input asp-for="PdId" class="form-control" placeholder="ProductID-ColorCode-Size : XXX-XX-XX" disabled />
                        <span asp-validation-for="PdId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PdName" class="control-label">Nume produs</label>
                        <input asp-for="PdName" class="form-control" placeholder="Nume produs" disabled />
                        <span asp-validation-for="PdName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PdDtls" class="control-label">Detalii</label>
                        <textarea asp-for="PdDtls" class="form-control" rows="4" placeholder="Descriere produs" disabled></textarea>
                        <span asp-validation-for="PdDtls" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Variante</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="SizeId" class="control-label">Marime</label>
                                <select asp-for="SizeId" class="form-select" disabled>
                                    <option value="">Selecteaza marimea</option>

                                    @foreach (var size in (IEnumerable<SelectListItem>)ViewData["Size"])
                                    {
                                        <option value="@size.Value">@size.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="SizeId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="ColorId" class="control-label">Culoare</label>
                                <select asp-for="ColorId" class="form-select" disabled>
                                    <option value="">Selecteaza culoarea</option>
                                    @foreach (var color in (IEnumerable<SelectListItem>)ViewData["Color"])
                                    {
                                        <option value="@color.Value">@color.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="ColorId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Organizare</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="TargetId" class="control-label">Tintă</label>
                        <select asp-for="TargetId" class="form-select" disabled>
                            <option value="">Selectează ținta produsului</option>
                            @foreach (var type in (IEnumerable<SelectListItem>)ViewData["Target"])
                            {
                                <option value="@type.Value">@type.Text</option>
                            }
                        </select>
                        <span asp-validation-for="TargetId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PdtId" class="control-label">Categorie</label>

                        <select asp-for="PdtId" class="form-select" disabled>
                            <option value="">Selecteaza categoria produsului</option>
                            @foreach (var type in (IEnumerable<SelectListItem>)ViewData["Pdt"])
                            {
                                <option value="@type.Value">@type.Text</option>
                            }
                        </select>
                        <span asp-validation-for="PdtId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SupId" class="control-label">Furnizori</label>

                        <select asp-for="SupId" class="form-select" disabled>
                            <option value="">Selecteaza furnizorii produsului</option>
                            @foreach (var supp in (IEnumerable<SelectListItem>)ViewData["Suppliers"])
                            {
                                <option value="@supp.Value">@supp.Text</option>
                            }
                        </select>
                        <span asp-validation-for="SupId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Preț</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="PdPrice" class="control-label">Preț</label>
                                <input asp-for="PdPrice" class="form-control" placeholder="Preț" disabled />
                                <span asp-validation-for="PdPrice" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PdCost" class="control-label">Cost</label>
                                <input asp-for="PdCost" class="form-control" placeholder="Cost" disabled />
                                <span asp-validation-for="PdCost" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
        
                <div class="col-lg-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Stock</h6>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="StatusId" class="control-label">Statut</label>
                                <select asp-for="StatusId" class="form-select" disabled>
                                    <option value="">Status</option>
                                    @foreach (var supp in (IEnumerable<SelectListItem>)ViewData["Status"])
                                    {
                                        <option value="@supp.Value">@supp.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="StatusId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PdStk" class="control-label">Cantitate</label>
                                <input asp-for="PdStk" class="form-control" placeholder="0" disabled />
                                <span asp-validation-for="PdStk" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Media</h6>
            </div>
            <div class="card-body">
                <div class="card" style="border: 1px dashed #9d9da0; border-spacing: 50px">
                    <div class="card-body">
                        <div class="mx-auto" style="width: 23rem">
                            <img src="@ViewBag.ImgFile" class="card-img-top" />
                        </div>
                    </div>
                </div>

                <div class="col">
                    <form method="post" asp-area="" asp-controller="Product" asp-action="Index">
                        <div class="mb-3">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br></br>
<br></br>
<br></br>
<br></br>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

