@model BeStreet.Models.UserRegister
@{
    Layout = null;
    <title>Inregistrarea utilizatorului</title>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <link href="~/wwwroot/AdminTemplate/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/wwwroot/AdminTemplate/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @ViewBag.ErrorMessage;
            </div>
        }

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Creaza un cont!</h1>
                            </div>
                            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationMessage("ModelOnly", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UName, new
                                        {
                                        @class = "form-control form-control-user",
                                        placeholder = "Introduce numele și prenumele",
                                        required = true,
                                        type = "text"
                                        })
                                    @Html.ValidationMessageFor(m => m.UName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.ULogin, new
                                        {
                                        @class = "form-control form-control-user",
                                        placeholder = "Introduce Username Id",
                                        required = true,
                                        type = "text"
                                        })
                                    @Html.ValidationMessageFor(m => m.ULogin, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">

                                    @Html.TextBoxFor(m => m.UPass, new
                                        {
                                        @class = "form-control form-control-user",
                                        placeholder = "Parola",
                                        required = true,
                                        type = "password"
                                        })
                                    @Html.ValidationMessageFor(m => m.UPass, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">

                                    @Html.TextBoxFor(m => m.UEmail, new
                                        {
                                        @class = "form-control form-control-user",
                                        placeholder = "Introduce email",
                                        required = true,
                                        type = "text"
                                        })
                                    @Html.ValidationMessageFor(m => m.UEmail, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    <input class="btn btn-primary btn-user btn-block" type="submit" value="Inregistrare cont" />
                                </div>
                                <br>
                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" href=@Url.Action("Login")>Deja ai un cont? Autentifica!</a>
                            </div>
                        </div>
                            </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminTemplate/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminTemplate/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/AdminTemplate/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/AdminTemplate/js/sb-admin-2.min.js"></script>

</body>

</html>