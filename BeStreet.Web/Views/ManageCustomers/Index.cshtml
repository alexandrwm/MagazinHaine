@model IEnumerable<BeStreet.Domain.Entities.ViewModels.CustomerVM>
@{
    Layout = "~/Views/Shared/_AdminLayoutEdit.cshtml";
    <title>Manager de clienti</title>

}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData.Peek("SuccessMessage")
    </div>
}

@{
    var stext = ViewBag.stext;
}

<div class="d-sm-flex align-items-center justify-content-between mb-5">
    <h1 class="h3 mb-2 text-gray-800">Lista clienti</h1>
</div>
<div class="row">
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7">

        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="position-absolute bottom-0 end-0">
                <a class="btn btn-outline-primary" href=@Url.Action("Create", "ManageCustomers")>Adauga client</a>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabelul de clienti</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Client Id Nr</th>
                        <th>Nume</th>
                        <th>Username</th>
                        <th>Parola</th>
                        <th>Email</th>
                        <th>Nivel</th>
                        <th>Data inceput</th>
                        <th>Ultima logare</th>
                        <th>Editare</th>
                        <th>Stergere</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Login</td>
                            <td>@item.Pass</td>
                            <td>@item.Email</td>
                            <td>@item.Role</td>
                            <td>@item.StartDate</td>
                            <td>@item.LastLogin</td>

                            <td class="text-center">
                                <a href=@Url.Action("Edit", "ManageCustomers", new { id = item.Id })>
                                    <i class="fas fa-edit"></i>

                                </a>
                            </td>
                            <td class="text-center">
                                <a href=@Url.Action("Delete", "ManageCustomers", new { id = item.Id })>
                                    <i class="text-center fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





