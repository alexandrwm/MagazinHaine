.@using MagazinHaine.ViewModels;
@model dynamic
@using System.Globalization;

@{
	CultureInfo us = new CultureInfo("en-us");
}
<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["ErrorMessage"]</div>
    }
</div>

<div class="container">
@foreach (Cart master in Model.Master)
{
    <div class="card bg-light">
        <div class="card-body">
            <h4 class="card-title text-primary opacity-75">Id @master.CartId</h4>
            <h5 class="card-subtitle mt-2 text-muted">
                    Data @master.CartDate.Value.ToString("yyyy-MMM-dd", us)
            </h5>
            <div class="text-danger text-end">
                Cantitate @master.CartQty Total @master.CartMoney.Value.ToString("#,###.##") euro
            </div>
            <hr />
                @if(master.CartCf != "Y")
                { 
                    <a class="btn btn-danger" asp-controller="Cart" asp-action="Delete"
                       asp-route-cartid="@master.CartId" onclick="return confirm('Confirmați pentru a șterge.')">
                        <i class="bi-cart-x-fill"></i> Șterge
                    </a>
                    <a class="btn btn-primary" asp-controller="Cart" asp-action="Confirm"
                       asp-route-cartid="@master.CartId" onclick="return confirm('Confirmă comanda')">
                        <i class="bi-currency-dollar"></i> Confirmă comanda
                    </a>
                }
                else if(master.CartPay != "Y")
                {
                    <a class="btn btn-primary" asp-controller="Cart" asp-action="Paid"
                       asp-route-cartid="@master.CartId" onclick="return confirm('Confirma plata')">
                        <i class="bi-currency-dollar"></i> Confirma plata
                    </a>
                }
        </div>
    </div>
}
<table class="table table-hover mt-3 ">
    <tr class="bg-light">
        <td></td>
        <td>Codul produsului</td>
        <td>Numele produsului</td>
        <td>Culoare</td>
        <td>Marimea</td>
        <td class="text-end">Preț/unitate</td>
        <td class="text-center">Cantitate</td>
        <td class="text-end">Preț total</td>
        <td></td>
    </tr>
    @{
        var i = 0;
    }
    @foreach (CtdVM detail in Model.Detail)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>
                <a asp-action="Show" asp-controller="Product" asp-route-id="@detail.PdId">
                    @detail.PdId
                </a>
            </td>
            <td>@detail.PdName</td>
            <td>@detail.ColorName</td>
            <td>@detail.SizeName</td>
            <td class="text-end">@detail.CdtlPrice.Value.ToString("#,###.##")</td>
            <td class="text-center">@detail.CdtlQty</td>
            <td class="text-end">@detail.CdtlMoney.Value.ToString("#,###.##")</td>
            <td class="text-center">
                <a asp-controller="Cart" asp-action="DeleteDtl"
                   asp-route-pdid="@detail.PdId" asp-route-cartid="@detail.CartId"
                   onclick="return confirm('Șterge produsele selectate?')">
                    <i class="bi-x-lg text-danger"></i>
                </a>
            </td>
        </tr>
    }
</table>

</div>