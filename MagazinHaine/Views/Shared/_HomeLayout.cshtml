
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] -   Magazin</title>

    <link rel="stylesheet" href="~/wwwroot/css/HomeStyles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" asp-append-version="true">
</head>
<body>
    <div id="sticker-sticky-wrapper" class="sticky-wrapper" style="height:74px;">
        <div class="top-header-area" id="sticker">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <div class="main-menu-wrap">
                            <div class="site-logo">
                                <a href="index.html">
                                    <img src="assets/img/logo.png" alt="">
                                </a>
                            </div>

                            <nav class="main-menu" style="display: block;">
                                <ul>
                                    <li class="current-list-item">
                                        <a href=@Url.Action("Index")>Acasă</a>
                                    </li>
                                    <li>
                                        <a href=@Url.Action("men")>Bărbați</a>
                                    </li>
                                    <li>
                                        <a href=@Url.Action("women")>Femei</a>
                                    </li>
                                    <li>
                                        <a href=@Url.Action("kids")>Copii</a>
                                    </li>

                                    @if (Session["CusId"] != null)
                                    {
                                        <li style="float:right;">
                                            <a href="#"><i class="bi bi-person-fill me-2"></i>@Session["CusName"]</a>
                                            <ul class="sub-menu" style="z-index:9999; position:absolute;">
                                                <li><a class="dropdown-item"  href=@Url.Action("Show", "Customer") asp-route-id="@Session["CusId"]">Informații personale</a></li>
                                                <li><a class="dropdown-item"  href=@Url.Action("List", "Cart") asp-route-cusid="@Session["CusId"]">Istoric comenzi</a></li>
                                                <li>
                                                    <a class="dropdown-item"  href=@Url.Action("Logout") onclick="return confirm('Deconectați-mă')">
                                                        <i class="bi bi-box-arrow-right me-2"></i>Deconectare
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li style="float:right">
                                            <a href=@Url.Action("Login")><i class="bi bi-person-fill me-2"></i>Autentificare</a>
                                        </li>
                                    }
                                    @if (Session["CartId"] != null)
                                    {
                                        <li style="float:right">
                                            <a  href=@Url.Action("Show", "Cart") asp-route-cartid="@Session["CartId"]">
                                                <i class="bi bi-bag-fill"></i>
                                                Cos de cumpărături [@Session["CartMoney"]][@Session["CartQty"]]
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()
    <script src="~/wwwroot/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/NavScripts.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sticky-js/1.3.0/sticky.min.js"></script>
</body>
</html>