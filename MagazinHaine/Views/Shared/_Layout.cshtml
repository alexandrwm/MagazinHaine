<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clothes Shop</title>
    <link rel="stylesheet" href="~/wwwroot/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wwwroot/css/sidebarFilter.css" asp-append-version="true" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" asp-append-version="true">
</head>
<body>
    <div id="sticker-sticky-wrapper" class="sticky-wrapper" style="height: 74px;">
        <div class="top-header-area" id="sticker">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <div class="main-menu-wrap">
                            <div class="site-logo">
                                <a href=@Url.Action("Index", "Home")>
                                </a>
                            </div>
                            <nav class="main-menu" style="display: block;">
                                <ul>
                                    <li class="current-list-item">
                                        <a href=@Url.Action("Index", "Home")>Acasa</a>
                                    </li>
                                    <li>
                                        <a href=@Url.Action("men", "Home")>Barbați</a>
                                    </li>
                                    <li>
                                        <a href=@Url.Action("women", "Home")>Femei</a>
                                    </li>
                                    <li>
                                        <a @Url.Action("kids", "Home")>Copii</a>
                                    </li>

                                    @if (Session["CusId"] != null)
                                    {
                                        <li style="float:right">
                                            <a href="#"><i class="bi bi-person-fill me-2"></i>@Session["CusName"]</a>
                                            <ul class="sub-menu">
                                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Show" asp-route-id="@Session["CusId"]">Informații personale</a></li>
                                                <li><a class="dropdown-item" asp-controller="Cart" asp-action="List" asp-route-cusid="@Session["CusId"]">Istoric comenzi</a></li>
                                                <li>
                                                    <a class="dropdown-item" asp-controller="Home" asp-action="Logout" onclick="return confirm('Deconectați-mă')">
                                                        <i class="bi bi-box-arrow-right me-2"></i>Deconectare
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li style="float:right">
                                            <a href=@Url.Action("Login")><i class="bi bi-person-fill me-2"></i>Autentificare</a>
                                        </li>
                                    }
                                    @if (Session["CartId"] != null)
                                    {
                                        <li style="float:right">
                                            <a asp-controller="Cart" asp-action="Show" asp-route-cartid="">
                                                <i class="bi bi-bag-fill"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

     @RenderBody() 
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Universitatea Tehnica a Moldovei - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/wwwroot/js/NavScripts.js" asp-append-version="true"></script>
    <script src="~/wwwroot/js/filter.js" asp-append-version="true"></script>
    <script src="~/wwwroot/js/script.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sticky-js/1.3.0/sticky.min.js"></script>
</body>
</html>
