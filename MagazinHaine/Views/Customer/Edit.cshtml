@model ClothesShop.Models.Customer

@{
    ViewData["Title"] = "Editare profil";
}
<div class="card shadow w-50 mx-auto ">
    <div class="card-header p-5">
        <h1>Editare Client</h1>
    </div>
    <div class="card-body d-flex justify-content-center align-items-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CusId" />
                <div class="form-group">
                    <label class="control-label">Numele și prenumele: </label>
                    <input asp-for="CusName" class="form-control" />
                    <span asp-validation-for="CusName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CusLogin" class="control-label"></label>
                    <input asp-for="CusLogin" class="form-control" disabled/>
                    <span asp-validation-for="CusLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CusPass" class="control-label"></label>
                    <input asp-for="CusPass" class="form-control" />
                    <span asp-validation-for="CusPass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CusEmail" class="control-label"></label>
                    <input asp-for="CusEmail" class="form-control" />
                    <span asp-validation-for="CusEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Adresa: </label>
                    <input asp-for="CusAdd" class="form-control" />
                    <span asp-validation-for="CusAdd" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Salveaza" class="btn btn-primary" onclick="return confirm('Informatia este corecta?')"/>
                    <a class="btn btn-light" asp-action="Show" asp-route-id="@Model.CusId">Anuleaza</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
